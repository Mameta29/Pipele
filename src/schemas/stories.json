{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "StoriesList",
  "type": "object",
  "properties": {
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 140
          },
          "story": {
            "type": "string",
            "maxLength": 1500
          }
        }
      }
    }
  }
}
